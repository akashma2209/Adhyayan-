                      </div>                       
                      <!-- Upload File Button -->
                          <div class="form-group mb-3">
                            <label for="upload-file"><h6> <strong>Upload file</strong></h6></label>
                            <br>
                            <input type="file" class="form-control" aria-label="file example" id="uploadpr" name="uploadpr" required>
                            <div class="invalid-feedback">Example invalid form file feedback</div>
                          </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" type="submit">Done</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
             
