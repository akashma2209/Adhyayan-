            <div class="modal fade" id="create-annou-Modal" tabindex="-1" aria-labelledby="create-annou-ModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="create-annou-ModalLabel">Create Assignment</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form id="create-annou-form" action="/createassign" method="POST">
                      <div class="mb-3 form-group">
                        <input type="text" class=" input-field form-control" id="class-annou" name="class_annou" required
                          placeholder="Announcement Topic (Required)">
                      </div>
                      <div class="mb-3">
                        <textarea type="text-area" class="input-field form-control" id="Announcement" rows="3" name="Announcement"
                          placeholder="Description"></textarea>
                      </div>                       
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" type="submit">Done</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
             





